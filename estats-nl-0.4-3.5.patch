+                continue;
+
+              mask_no:
+                for (i = 0; i < max_index[tblnum]; i++) {
+			k = single_index(tblnum, i);
+                        read_tcp_estats(&(val[k]), stats, &(estats_var_array[tblnum][i]));
+
+                }
